<div class="book-filters" data-controller="potato" >
  <div class="filter-options">
    <div class="filter-headers">
      <h4>Filter by</h4>
      <p><%= link_to "Reset", books_path(query: params[:query]) %></p>
    </div>
    <hr>

    <div class="filter-title" data-action="click->potato#revealGenres">
      <i class="fa-solid fa-caret-right" data-potato-target="genrecaret"></i>
      <h5>Genre</h5>
    </div>
    <div class="sub-option-container d-none" data-potato-target="genres">
      <p><%= link_to "Adventure", books_path(genre: "adventure") %></p>
      <p><%= link_to "Childrens", books_path(genre: "childrens") %></p>
      <p><%= link_to "Classic", books_path(genre: "classic") %></p>
      <p><%= link_to "Crime", books_path(genre: "crime") %></p>
      <p><%= link_to "Fantasy", books_path(genre: "fantasy") %></p>
      <p><%= link_to "Fiction", books_path(genre: "fiction") %></p>
      <p><%= link_to "Horror", books_path(genre: "horror") %></p>
      <p><%= link_to "Non-fiction", books_path(genre: "non-fiction") %></p>
      <p><%= link_to "Science Fiction", books_path(genre: "science fiction") %></p>
      <p><%= link_to "Graphic Novel", books_path(genre: "Graphic Novel") %></p>
      <p><%= link_to "Epic Novel", books_path(genre: "Epic Novel") %></p>
      <p><%= link_to "Romance", books_path(genre: "Romance") %></p>
    </div>
  <hr>

  <div class="filter-title" data-action="click->potato#revealYear">
    <i class="fa-solid fa-caret-right" data-potato-target="yearcaret"></i>
    <h5>Year</h5>
  </div>
  <div data-potato-target="year" class="sub-option-container d-none">
    <form action="<%= request.url %>" method="GET" id ="year-container" data-controller="filter-date" data-action="submit->filter-date#applyFilter">
      <p>From: </p>
      <input data-filter-date-target="from" name="from" type="number" min="-400" max="2022" step="1" value="<%= params[:from] ? params[:from] : 1850%>"/>
      <p> to </p>
      <input data-filter-date-target="to" name="to" type="number" min="-400" max="2022" step="1" value="<%= params[:to] ? params[:to] : 2000%>"/>
      <input type="submit" value="Go">
    </form>
  </div>
  <hr>

  <div class="filter-title" data-action="click->potato#revealCondition">
    <i class="fa-solid fa-caret-right" data-potato-target="conditioncaret"></i>
    <h5>Condition</h5>
  </div>
    <div class="sub-option-container d-none " data-potato-target="condition">
      <p><%= link_to "New", request.params.merge(condition: "New") %></p>
      <p><%= link_to "Like New", request.params.merge(condition: "Like New") %></p>
      <p><%= link_to "Very Good", request.params.merge(condition: "Very Good") %></p>
      <p><%= link_to "Good", request.params.merge(condition: "Good") %></p>
      <p><%= link_to "Acceptable", request.params.merge(condition: "Acceptable") %></p>
      <p><%= link_to "Poor", request.params.merge(condition: "Poor") %></p>
    </div>
  </div>
</div>
