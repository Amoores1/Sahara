<div class="new-order-container">
  <div class="left-side-new-order">
    <% @current_cart.basket_items.each do |basket_item| %>
      <div class="basket-item-order">
        <div class="basket-item-order-top">
          <h6><%= basket_item.physical_book.book.title %></h6>
          <h6><%= link_to "X", basket_item_path(basket_item), data: { "turbo-method": :delete } %></h6>
        </div>
        <div class="basket-item-order-bottom">
          <p class="order-info">Price: £<%= basket_item.physical_book.price %></p>
          <p class="order-info">Bookstore: <%= basket_item.physical_book.bookstore.name %></p>
          <p class="order-info">Address: <%= basket_item.physical_book.bookstore.address %></p>
        </div>
      </div>
      <hr>
    <% end %>

    <div class="payment-div">
      <h3 class="m-3">Sub total: £<%= @current_cart.sub_total %></h3>
    <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Make Payment
      </button>
    </div>

  </div>
  <div class="right-side-new-order">
  <h3>hello I am the right side</h3>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thank you</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Your payment is confirmed
      </div>
      <div class="modal-footer">
        <%= button_to "Confirm", orders_path, method: :post, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
